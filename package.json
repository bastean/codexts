{
	"private": true,
	"name": "codexts",
	"version": "1.0.0",
	"description": "codexts Root",
	"author": "Bastean <bastean@pm.me>",
	"license": "MIT",
	"homepage": "https://github.com/bastean/codexts#readme",
	"repository": {
		"type": "git",
		"url": "https://github.com/bastean/codexts.git"
	},
	"bugs": {
		"url": "https://github.com/bastean/codexts/issues"
	},
	"engines": {
		"node": ">=18",
		"npm": ">=9"
	},
	"workspaces": [
		"src/contexts/*",
		"src/apps/*/*",
		"tests"
	],
	"type": "module",
	"scripts": {
		"init": "npm ci",
		"prepare": "git init && husky install",
		"genesis": "git clean -e src/**/.env* -fdx && git reset --hard HEAD && npm run init",
		"commit": "cz",
		"upgrade:check": "npx ncu --root -ws",
		"upgrade": "node scripts/upgrade",
		"lint:check": "tsc --noEmit && npm run check -w codexts-frontend && eslint . && prettier --check .",
		"lint:cache": "eslint --cache --cache-location=./node_modules/.cache/eslint/.eslint-cache --fix . && prettier --ignore-unknown --cache --write .",
		"lint": "eslint --fix . && prettier --ignore-unknown --write .",
		"build": "npm run build -ws --if-present",
		"release": "release-it -V",
		"release:alpha": "npm run release -- --preRelease=alpha",
		"release:beta": "npm run release -- --preRelease=beta",
		"release:ci": "npm run release -- --ci",
		"release:dry": "npm run release -- -d --no-git.requireCleanWorkingDir",
		"release:version": "npm run release:dry -- --release-version",
		"release:changelog": "npm run release:dry -- --changelog",
		"start:backend": "npm run start -w codexts-backend",
		"start:frontend": "npm run dev -w codexts-frontend",
		"start": "node -e \"console.clear()\" && concurrently -k -n \"BACKEND,FRONTEND\" -c \"bgBlue.bold,bgMagenta.bold\" \"npm run start:backend\" \"npm run start:frontend\""
	},
	"lint-staged": {
		"**/*.{ts,svelte}": "eslint --fix",
		"**/*": "prettier --ignore-unknown --write"
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"release-it": {
		"git": {
			"requireBranch": "main",
			"commitMessage": "chore(release): v${version}",
			"tagAnnotation": "v${version}",
			"tagName": "codexts ${version}"
		},
		"github": {
			"release": true,
			"releaseName": "v${version}"
		},
		"npm": {
			"release": false
		},
		"plugins": {
			"@release-it/conventional-changelog": {
				"preset": "conventionalcommits",
				"infile": "CHANGELOG.md",
				"header": "# Changelog"
			},
			"@release-it-plugins/workspaces": {
				"publish": false,
				"additionalManifests": {
					"versionUpdates": [
						"src/**/manifest.json"
					]
				}
			}
		},
		"hooks": {
			"before:init": [
				"npm run lint:check",
				"npm test -w codexts-tests"
			],
			"after:release": "echo Successfully released ${name} v${version} to ${repo.repository}"
		}
	},
	"devDependencies": {
		"@commitlint/cli": "17.6.5",
		"@commitlint/config-conventional": "17.6.5",
		"@release-it-plugins/workspaces": "3.2.0",
		"@release-it/conventional-changelog": "5.1.1",
		"@typescript-eslint/eslint-plugin": "5.59.8",
		"@typescript-eslint/parser": "5.59.8",
		"commitizen": "4.3.0",
		"concurrently": "8.0.1",
		"cz-conventional-changelog": "3.3.0",
		"eslint": "8.41.0",
		"eslint-config-airbnb-base": "15.0.0",
		"eslint-config-airbnb-typescript": "17.0.0",
		"eslint-config-prettier": "8.8.0",
		"eslint-import-resolver-typescript": "3.5.5",
		"eslint-plugin-check-file": "2.3.0",
		"eslint-plugin-hexagonal-architecture": "1.0.3",
		"eslint-plugin-import": "2.27.5",
		"eslint-plugin-jest": "27.2.1",
		"eslint-plugin-no-secrets": "0.8.9",
		"eslint-plugin-playwright": "0.12.0",
		"eslint-plugin-security": "1.7.1",
		"eslint-plugin-svelte": "2.29.0",
		"eslint-plugin-unused-imports": "2.0.0",
		"execa": "7.1.1",
		"husky": "8.0.3",
		"lint-staged": "13.2.2",
		"npm-check-updates": "16.10.12",
		"prettier": "2.8.8",
		"prettier-plugin-svelte": "2.10.1",
		"prettier-plugin-tailwindcss": "0.3.0",
		"release-it": "15.10.3",
		"typescript": "5.0.4"
	}
}
