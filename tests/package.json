{
	"private": true,
	"name": "codexts-tests",
	"version": "1.2.3",
	"description": "codexts Tests",
	"author": "Bastean <bastean@pm.me>",
	"license": "MIT",
	"homepage": "https://github.com/bastean/codexts#readme",
	"repository": {
		"type": "git",
		"url": "https://github.com/bastean/codexts.git"
	},
	"bugs": {
		"url": "https://github.com/bastean/codexts/issues"
	},
	"engines": {
		"node": ">=18",
		"npm": ">=9"
	},
	"type": "module",
	"scripts": {
		"prepare:jest": "env-cmd -f jest.run.env --use-shell jest --passWithNoTests --noStackTrace -c",
		"prepare:cucumber": "env-cmd -f cucumber.run.env --use-shell cucumber-js -p",
		"prepare:backend:start": "npm run start -w codexts-backend",
		"prepare:backend:test": "npm run prepare:cucumber backend",
		"prepare:frontend:start": "npm run dev -w codexts-frontend",
		"prepare:frontend:test": "npm run prepare:cucumber frontend",
		"test:acceptance:backend": "start-test prepare:backend:start http://localhost:5172 prepare:backend:test",
		"test:acceptance:frontend": "start-test prepare:backend:start http://localhost:5172 prepare:frontend:start http://localhost:5173 prepare:frontend:test",
		"test:acceptance": "npm run test:acceptance:backend && npm run test:acceptance:frontend",
		"test:integration": "npm run prepare:jest jest-integration.config.cjs",
		"test:unit": "npm run prepare:jest jest-unit.config.cjs",
		"test": "npm run test:unit && npm run test:integration && npm run test:acceptance"
	},
	"devDependencies": {
		"@cucumber/cucumber": "9.1.2",
		"@faker-js/faker": "8.0.2",
		"@playwright/test": "1.35.1",
		"@types/jest": "29.5.2",
		"env-cmd": "10.1.0",
		"jest": "29.5.0",
		"playwright": "1.35.1",
		"start-server-and-test": "2.0.0",
		"ts-jest": "29.1.0",
		"ts-node": "10.9.1",
		"typescript": "5.1.3"
	}
}
